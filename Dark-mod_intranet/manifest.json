{
	"manifest_version": 3,
	"name": "Dark Mode Intranet",
	"version": "1.0",
	"description": "Active un mode sombre sur l'intranet",
	"permissions": [
		"scripting",
		"activeTab",
		"storage"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"action": {
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "background.js"
	}
}
